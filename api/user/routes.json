[
    {
        "method": "GET",
        "path": "/users",
        "roles": ["authenticated", "admin"],
        "handlers": [
            "controllers.find"
        ]
    },
    {
        "method": "POST",
        "path": "/users",
        "roles": ["authenticated", "admin"],
        "handlers": [
            "controllers.create"
        ]
    },
    {
        "method": "GET",
        "path": "/users/:id",
        "roles": ["authenticated", "admin"],
        "handlers": [
            "controllers.findOne"
        ]
    },
    {
        "method": "PUT",
        "path": "/users/:id",
        "roles": ["authenticated", "admin"],
        "handlers": [
            "controllers.update"
        ]
    },
    {
        "method": "DELETE",
        "path": "/users/:id",
        "roles": ["authenticated", "admin"],
        "handlers": [
            "controllers.delete"
        ]
    }
